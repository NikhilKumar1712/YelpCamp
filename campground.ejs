<!DOCTYPE html> 
<html> 
  <head> 
    <title>All Sites</title> 
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style type="text/css">
    body {
      padding: 0em;
    }
    .card {
      border: none;
    }
    img,
    .card-img-top {
      border-radius: 0em;
    }

    @media () {
      .card-columns {
        column-count: 3;
      }
    }

  </style>
  </head> 
  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a href="/" class="navbar-brand">Home</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="navbar navbar-nav navbar-right">
            <li><a href="/">Login</a></li>
            <li><a href="/">SignUp</a></li>
            <li><a href="/">Logout</a></li>
          </ul>
        </div>
      </div>
     </nav>
    
    <div class = "container">
      <header class = "jumbotron">
        <div class = "container">
          <h1>Welcome to YelpCamp!!!</h1>
          <p>View Our Camps all Around the Globe </p>
          <p>
            <a class = "btn btn-primary btn-large" href = "/campground/new">Add New Sites</a>
          </p>
        </div>
      </header>
      <% for(var i=0;i<a.length;i++) {%>
        <div class="row justify-content-center">
        <div class="col-sm-6">
          <div class="card">
            <img class="card-img-top" src="<%=a[i].image%>" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%=a[i].name%></h5>
              <a href = "/campground/<%= a[i]._id %>" class="btn btn-primary">More Info</a>
            </div> 
            </div>
          </div>
          </div>
            <% } %>
    </div>
  </body>
</html>